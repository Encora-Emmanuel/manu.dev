{
  "name": "manu.dev",
  "private": true,
  "description": "Emmanuel Rosa Sarachini de Oliveira's personal website",
  "version": "0.1.0",
  "license": "0BSD",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop -o",
    "lint": "eslint . --ext js,jsx",
    "format": "prettier --write --loglevel=error .",
    "start": "yarn dev",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "validate": "concurrently  'yarn build' 'yarn lint' 'yarn format' --names='build,lint,format' --prefix-colors='magenta.bold,blue.bold,yellow.bold' --kill-others-on-fail"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@mdx-js/mdx": "^1.6.18",
    "@mdx-js/react": "^1.6.18",
    "@react-hook/media-query": "^1.1.1",
    "gatsby": "^2.24.77",
    "gatsby-plugin-catch-links": "^2.3.15",
    "gatsby-plugin-emotion": "^4.3.13",
    "gatsby-plugin-mdx": "^1.2.46",
    "gatsby-plugin-react-helmet": "^3.3.14",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "yarn": "^1.22.21"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "prettier": "2.1.2",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn validate"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Encora-Emmanuel"
  }
}
